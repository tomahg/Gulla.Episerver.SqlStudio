@using EPiServer.Shell.Navigation
@using Gulla.Episerver.SqlStudio.Dds

@model Gulla.Episerver.SqlStudio.ViewModels.AdminViewModel

@{
    Layout = null;
}

<html>
<head>
    <title>SqlStudio Audit Log Admin</title>

    <style>
        body {
            margin: 0;
            background-color: #FBFBFB
        }

      .inputcontainer select, .inputcontainer input {
            padding: 5px 2px;
        }
    </style>
</head>
<body>

    @Html.Raw(Html.CreatePlatformNavigationMenu())
    <div id="epi-application" @Html.Raw(Html.ApplyPlatformNavigation())>
        <div class="epi-contentArea">
            <div class="inputcontainer" style="margin-left: 30px; margin-bottom: 20px; margin-top: 20px">
                <h4 style="margin-bottom: 5px">Audit Log Admin</h4>
                <p>Number of logs in DDS: @Model.LogsCount</p>
                @using (Html.BeginForm())
                {
                    <input type="submit" id="btnDelete" name="Delete" value="Clear all logs" class="epi-cmsButton-text epi-cmsButton-tools epi-cmsButton-Delete" />
                }
            </div>
        </div>
    </div>
</body>
</html>